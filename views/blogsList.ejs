<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head') %>
<body>
    <h1> <%= title %> </h1>
    <%- include('partials/navbar') %>
    <% if (blogs.length > 0) { %>
        <% blogs.forEach(blog => { %>
            <a href="/blogs/<%=blog._id%>">
                <h2><%= blog.title %></h2>
                <p class="truncate"><%= blog.body %></p>
                <p><%= blog.author %></p>
            </a>
        <% }) %>
    <% } else { %>
        <p>There is no blogs to display</p>
    <% } %>
</body>
</html>